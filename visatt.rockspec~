package = "visatt"
version = "0.1"

source = {
   url = "git://github.com/jrbtaylor/visatt",
   tag = "master"
}

description = {
   summary = "RNN-based Visual Attention for Torch",
   detailed = [[
   	    RNN-based Visual Attention for Torch
   ]],
   homepage = "git://github.com/jrbtaylor/visatt"
}

dependencies = {
   "torch >= 7.0"
}

build = {
   type = "command",
   build_command = [[
cmake -E make_directory build;
cd build;
cmake .. -DCMAKE_BUILD_TYPE=Release -DCMAKE_PREFIX_PATH="$(LUA_BINDIR)/.." -DCMAKE_INSTALL_PREFIX="$(PREFIX)"; 
$(MAKE)
   ]],
   install_command = "cd build && $(MAKE) install"
}
